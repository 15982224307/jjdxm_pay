<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context=".MainActivity">

    <Button
        android:id="@+id/weichatpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信 支付"/>

    <Button
        android:id="@+id/payV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付宝支付"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/authV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付宝授权"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="重要说明:\n本Demo为了方便向商户展示支付宝的支付流程，所以订单信息的加签过程放在客户端完成；\n在商户的真实App内，为了防止商户私密数据泄露，造成不必要的资金损失，及面临各种安全风险；\n商户privatekey等数据严禁放在客户端，订单信息的加签过程也务必放在服务端完成；\n若商户接入时不遵照此说明，因此造成了损失，需自行承担。"
        android:textColor="#FF0000"/>

</LinearLayout>